                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/countdown_textview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/ready_constraint_layout"
            app:layout_constraintBottom_toBottomOf="@id/ready_constraint_layout"
            app:layout_constraintStart_toStartOf="@id/ready_constraint_layout"
            app:layout_constraintEnd_toEndOf="@id/ready_constraint_layout"
            android:background="@color/set_bg"
            android:gravity="center"
            android:text="GAME START!"
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/bm_jua"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/leftcard_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bm_jua"
            android:text="@{@string/leftcard(viewModel.leftCard)}"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_constraint_layout"
            android:layout_marginEnd="20dp"
            tools:text="남은 카드 : 69"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/answer_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/gmarketsansmedium"
            android:onClick="@{ () -> setOnlineFragment.answerBtn() }"
            android:padding="15dp"
            android:text="정답"
            android:textColor="@color/btn_text_color"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/no_combination_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/gmarketsansmedium"
            android:onClick="@{ () -> setOnlineFragment.noCombinationBtn()}"
            android:padding="15dp"
            android:text="!"
            android:textColor="@color/btn_text_color"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/answer_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/answer_btn"
            app:layout_constraintTop_toTopOf="@id/answer_btn"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/ready_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/gmarketsansmedium"
            android:onClick="@{ () -> setOnlineFragment.readyBtn() }"
            android:padding="15dp"
            android:text="준비 완료"
            android:textColor="@color/btn_text_color"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
