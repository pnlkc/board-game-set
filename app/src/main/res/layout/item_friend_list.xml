<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_list_item_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@null"
    android:gravity="center_vertical"
    android:layout_marginBottom="20dp"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@null">

        <TextView
            android:id="@+id/friend_list_item_nickname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SavMyLife"
            android:fontFamily="@font/bm_jua"
            android:textSize="20sp"
            android:textColor="@color/dialog_btn_text"
            />

        <TextView
            android:id="@+id/friend_list_item_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="접속중"
            android:fontFamily="@font/bm_jua"
            android:textSize="16sp"
            android:textColor="@color/dialog_text"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/friend_list_item_invite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_btn_bg"
        android:text="@string/invite"
        android:fontFamily="@font/bm_jua"
        android:textColor="@color/dialog_btn_text"
        android:textSize="16sp"
        android:padding="10dp"
        />

</LinearLayout>