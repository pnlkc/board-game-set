<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="대단합니다"
        android:textSize="20sp"
        android:textColor="@color/dialog_title_text"
        android:paddingVertical="20dp"
        android:fontFamily="@font/cookierunregular"
        android:gravity="center"
        android:background="@color/dialog_bg" />

    <TextView
        android:id="@+id/dialog_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="당신은 0개를\n맞추셨습니다"
        android:textColor="@color/dialog_text"
        android:textSize="22sp"
        android:fontFamily="@font/gmarketsansmedium"
        android:lineSpacingExtra="15dp"
        android:gravity="center"
        android:paddingVertical="35dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingHorizontal="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/dialog_exit_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/dialog_btn_bg"
            android:text="나가기"
            android:textSize="17sp"
            android:fontFamily="@font/cookierunregular"
            android:textColor="@color/dialog_btn_text"
            android:layout_marginEnd="40dp"
            />

        <Button
            android:id="@+id/dialog_replay_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/dialog_btn_bg"
            android:text="다시하기"
            android:textSize="17sp"
            android:fontFamily="@font/cookierunregular"
            android:textColor="@color/dialog_btn_text"
            />

    </LinearLayout>


</LinearLayout>